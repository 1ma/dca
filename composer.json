{
    "name": "uma/dca",
    "description": "i will think of something",
    "license": "MIT",
    "type": "project",
    "require": {
        "php-64bit": ">=7.0",
        "composer/ca-bundle": "^1.0",
        "guzzlehttp/guzzle": "^6.3",
        "linusu/bitcoin-address-validator": "^0.1.2",
        "monolog/monolog": "^1.23",
        "pimple/pimple": "^3.2",
        "roave/security-advisories": "dev-master",
        "symfony/console": "^3.3"
    },
    "autoload": {
        "psr-4": {
            "UMA\\DCA\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "UMA\\Tests\\DCA\\": "tests/"
        }
    },
    "require-dev": {
        "uma/psr7-hmac": "^0.5.0"
    },
    "scripts": {
        "hack": [
            "@composer install",
            "wget -nc https://github.com/borisrepl/boris/releases/download/v1.0.8/boris.phar"
        ],
        "test": [
            "@composer install",
            "wget -nc https://phar.phpunit.de/phpunit-6.4.phar",
            "php phpunit-6.4.phar --testdox"
        ],
        "pack": [
            "@composer install --no-dev",
            "wget -nc https://github.com/box-project/box2/releases/download/2.7.5/box-2.7.5.phar",
            "php box-2.7.5.phar build"
        ]
    }
}
