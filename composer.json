{
    "name": "uma/dca",
    "description": "i will think of something",
    "license": "MIT",
    "type": "project",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/1ma/ca-bundle"
        },
        {
            "type": "vcs",
            "url": "https://github.com/1ma/zf-console"
        }
    ],
    "require": {
        "php-64bit": ">=7.0",
        "ext-curl": "*",
        "composer/ca-bundle": "dev-issue-10-phar-fix",
        "guzzlehttp/guzzle": "^6.3",
        "linusu/bitcoin-address-validator": "^0.1.2",
        "monolog/monolog": "^1.23",
        "pimple/pimple": "^3.2",
        "roave/security-advisories": "dev-master",
        "zfcampus/zf-console": "dev-interop-to-psr11"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.4"
    },
    "autoload": {
        "psr-4": {
            "UMA\\DCA\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "UMA\\Tests\\DCA\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "@composer install",
            "php vendor/bin/phpunit --testdox"
        ],
        "pack": [
            "@composer install --no-dev",
            "wget -nc https://github.com/box-project/box2/releases/download/2.7.5/box-2.7.5.phar",
            "php box-2.7.5.phar build"
        ]
    },
    "config": {
        "sort-packages": true
    }
}
