{
    "name": "uma/dca",
    "description": "i will think of something",
    "license": "MIT",
    "type": "project",
    "require": {
        "php-64bit": ">=7.3",
        "ext-curl": "*",
        "composer/ca-bundle": "^1.2",
        "guzzlehttp/guzzle": "^6.5",
        "linusu/bitcoin-address-validator": "^0.1.2",
        "monolog/monolog": "^1.25",
        "pimple/pimple": "^3.3",
        "zfcampus/zf-console": "^1.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.1",
        "roave/security-advisories": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "UMA\\DCA\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "UMA\\Tests\\DCA\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "@composer install",
            "php vendor/bin/phpunit --testdox"
        ],
        "pack": [
            "@composer install --no-dev",
            "wget -nc https://github.com/box-project/box2/releases/download/2.7.5/box-2.7.5.phar",
            "php box-2.7.5.phar build"
        ]
    },
    "config": {
        "sort-packages": true
    }
}
