{
    "name": "uma/dca",
    "description": "i will think of something",
    "license": "MIT",
    "type": "project",
    "require": {
        "php": "^7.3.0 || ^7.4.0 || ^8.0.0 || ^8.1.0",
        "ext-curl": "*",
        "composer/ca-bundle": "^1.2",
        "guzzlehttp/guzzle": "^7.4",
        "linusu/bitcoin-address-validator": "^0.1.2",
        "monolog/monolog": "^2.0",
        "uma/dic": "^2.0",
        "zfcampus/zf-console": "^1.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "roave/security-advisories": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "UMA\\DCA\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "UMA\\Tests\\DCA\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "@composer install",
            "php vendor/bin/phpunit --testdox"
        ],
        "compile": [
            "rm -f dca.phar",
            "@composer install --no-dev --classmap-authoritative",
            "php -dphar.readonly=0 bin/compile",
            "chmod +x dca.phar"
        ]
    },
    "config": {
        "sort-packages": true
    }
}
